{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "es2020.string", "es2020.symbol.wellknown", "ESNext.BigInt"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "../lib/frontend",
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
    },
  },
  "include": ["src", "../backend/src/utils/permissions.ts"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../psd-types" }
  ],
}
