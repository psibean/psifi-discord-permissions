{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "./lib",
    "baseUrl": ".",
    "strictNullChecks": true,
    "isolatedModules": false,
    "declaration": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/types"
    ],
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "references": [
    { "path": "../psd-types"}
  ],
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true,
  },
  "files": [
    "./src/types/global.d.ts",
    "./node_modules/@types/node/ts4.8/crypto.d.ts"
  ]
}
