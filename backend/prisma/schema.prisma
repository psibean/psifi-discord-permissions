// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String   @id
  sid         String   @unique @default(uuid()) @db.Uuid
  data        String
  expiresAt   DateTime
}

model User {
  id              String      @db.Uuid  @default(uuid())
  discordId       String      @unique   @db.VarChar(128)
  preferences     UserPreferences?
  @@id([id])
}

model Guild {
  id        String  @db.VarChar(128)
  ownerOnly Boolean @default(true)
  role      String?  @db.VarChar(128)

  @@id([id])
}

model UserPreferences {
  id    String  @db.Uuid
  user  User    @relation(fields: [id], references: [id], onDelete: Cascade)
  @@id([id])
}